# WordPress + external RDS
COMPOSE_PROJECT_NAME=ases-wp
WORDPRESS_DB_HOST=your-rds-endpoint.rds.amazonaws.com:3306
WORDPRESS_DB_NAME=your_db_name
WORDPRESS_DB_USER=your_db_user
WORDPRESS_DB_PASSWORD=your_db_password
WORDPRESS_TABLE_PREFIX=wp_
WORDPRESS_DEBUG=false

# Optional
WORDPRESS_CONFIG_EXTRA="define('WP_HOME', 'https://your-domain.com'); define('WP_SITEURL', 'https://your-domain.com');"
# AWS S3 Configuration (Optional - for faster image serving)
AWS_S3_BUCKET=your-bucket-name
AWS_S3_REGION=eu-north-1
AWS_S3_ACCESS_KEY=your_access_key_id
AWS_S3_SECRET_KEY=your_secret_access_key